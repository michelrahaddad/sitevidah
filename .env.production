# Production Environment Variables
NODE_ENV=production

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production

# Database Configuration (will be provided by Replit)
# DATABASE_URL=postgresql://...

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# CORS Origins for production
ALLOWED_ORIGINS=*.replit.app,*.repl.co

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX=50
ADMIN_RATE_LIMIT_MAX=20
LOGIN_RATE_LIMIT_MAX=5

# Security Headers
ENABLE_HSTS=true
CSP_REPORT_URI=

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true